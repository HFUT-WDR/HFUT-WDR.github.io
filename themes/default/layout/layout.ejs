<!DOCTYPE html>
<html lang="<%= site.language || 'zh-CN' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><% if (page.title) { %><%= page.title %> - <% } %><%= site.title %></title>
  <meta name="description" content="<%= page.description || site.description %>">
  <meta name="author" content="<%= site.author %>">

  <!-- RSS -->
  <link rel="alternate" href="/atom.xml" title="<%= site.title %>" type="application/atom+xml">

  <!-- Theme CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Highlight.js -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/styles/github.min.css">

  <% if (typeof header !== 'undefined') { %>
    <%- header %>
  <% } %>
</head>
<body>
  <!-- Site Header -->
  <header class="site-header">
    <div class="container">
      <h1 class="site-title">
        <a href="/"><%= site.title %></a>
      </h1>
      <% if (site.subtitle) { %>
        <p class="site-subtitle"><%= site.subtitle %></p>
      <% } %>
      <nav class="site-nav">
        <a href="/">首页</a>
        <a href="/archive/">归档</a>
        <a href="/categories/">分类</a>
        <a href="/tags/">标签</a>
        <% if (site.about) { %>
          <a href="/about/">关于</a>
        <% } %>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="site-main">
    <div class="container">
      <%- body %>
    </div>
  </main>

  <!-- Site Footer -->
  <footer class="site-footer">
    <div class="container">
      <p>&copy; <%= year(new Date()) %> <%= site.author %>.
        <% if (site.footer) { %>
          <%= site.footer %>
        <% } else { %>
          Powered by <a href="https://github.com/yourteam/wdr">WDR</a>
        <% } %>
      </p>
    </div>
  </footer>

  <!-- Theme JavaScript -->
  <script src="/js/main.js"></script>

  <% if (typeof footer !== 'undefined') { %>
    <%- footer %>
  <% } %>
</body>
</html>
